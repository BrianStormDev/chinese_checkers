<launch>

    <!-- Start the joint trajectory action server in a new terminal -->
    <node name="joint_trajectory_action_server" pkg="intera_interface" type="joint_trajectory_action_server.py" output="screen" launch-prefix="mate-terminal -- bash -c"/>

    <!-- Launch MoveIt for Sawyer with electric gripper enabled in a new terminal -->
    <include file="$(find sawyer_moveit_config)/launch/sawyer_moveit.launch" launch-prefix="mate-terminal -- bash -c">
        <arg name="electric_gripper" value="true"/>
    </include>

    <!-- Launch the AR tag tracking and camera configuration in a new terminal -->
    <include file="$(find sawyer_full_stack)/launch/sawyer_camera_track.launch" launch-prefix="mate-terminal -- bash -c">
    </include>

    <!-- Run the custom Python script for sawyer_full_stack in a new terminal -->
    <node name="sawyer_main" pkg="sawyer_full_stack" type="main.py" output="screen" launch-prefix="mate-terminal -- bash -c"/>  

    <!-- Run the custom Python script for internal in a new terminal -->
    <node name="internal_main" pkg="internal" type="dummy_main.py" output="screen" launch-prefix="mate-terminal -- bash -c"/>  

</launch>